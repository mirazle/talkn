<script type="text/javascript">
    const wideScreenWidth = 960;
    const smallScreenWidth = 600;
    const responsiveWidth = 640;
    const headerHeight = 100;

    const pointerStyles = [
        {height: "5px", width: "10%", transform: "translate3d(0%,0px,0px)"},
        {height: "5px",  width: "10%", transform: "translate3d(250%,0px,0px)"},
        {height: "5px", width: "10%", transform: "translate3d(500%,0px,0px)"},
        {height: "5px", width: "10%", transform: "translate3d(750%,0px,0px)"},
        {height: "0px", width: "10%", transform: "translate3d(750%,0px,0px)"}
    ];
    const menuStyles = {
        active: {color: "rgb(79, 174, 159)"},
        unactive: {color: "rgb(55, 55, 55)"},
    }
    let screen = 0;
    let isAnimateScrolling = false;
    let oneScreenHeight = smallScreenWidth;

    function onMouseOver(num){
        movePointer(num);
        setMenuColor();
    }

    function onMouseLeave(num){
        movePointer(screen);
        setMenuColor();
    }

    function onClick(num){
        setScreen(num);
        movePointer(num, true);
        setMenuColor();
    }

    function onClickToTop(){
        animateScrollTo(0);
    }

    function onKeyPressSearch(e){
        if ( e.key === "Enter" ) {
            let value = e.target.value;
            let isUrl = false;
            let url = "";
            if( value.indexOf("https:/") === 0 ){
                value = value.replace("https:/", "");
                isUrl = true;
            }
            if( value.indexOf("http:/") === 0 ){
                value = value.replace("http:/", "");
                isUrl = true;
            }

            url = isUrl ? value : "/" + value;
            location.href = "https://<%= domain %>" + url;
        }
    }

    function getCalcScreen(){
        const { scrollY, innerHeight } = window;
        if( 0 <= scrollY && scrollY < ( oneScreenHeight * 1 ) + headerHeight) {
            screen = 0;
        }else if( oneScreenHeight + headerHeight <= scrollY && scrollY < ( oneScreenHeight * 2 ) + headerHeight ){
            screen = 1;
        }else if( ( oneScreenHeight * 2 ) + headerHeight <= scrollY && scrollY < ( oneScreenHeight * 3 ) + headerHeight ){
            screen = 2;
        }else if( ( oneScreenHeight * 3 ) + headerHeight <= scrollY && scrollY < ( oneScreenHeight * 4 ) + headerHeight ){
            screen = 3;
        }else if( ( oneScreenHeight * 4 ) + headerHeight <= scrollY ){
            screen = 4;
        }
        return screen;
    }

    function setScreen(num){
        if(num){
            screen = num;
        }else{
            screen = getCalcScreen();
        }
        return screen;
    }

    function setMenuColor(){
        if( window.menuLis ){
            window.menuLis.forEach( (menuLi, i) => {
                menuLi.style.color = screen === i ? menuStyles.active.color : menuStyles.unactive.color;
            } );
        }
    }

    function movePointer(num = 0, animateScroll = false){
        const { scrollY, innerHeight } = window.scrollY;
        const pointerStyle = pointerStyles[ num ];
        const pointer = document.querySelector(".pointer");
        pointer.style.width = pointerStyle.width;
        pointer.style.height = pointerStyle.height;
        pointer.style.transform = pointerStyle.transform;
        const moveScrollY = num === 0 ? 0 : ( oneScreenHeight * num ) + headerHeight ;
        if( animateScroll ){
            animateScrollTo( moveScrollY, 600 );
        }
    }

    function setNavStyles(){
        const nav = document.querySelector("nav");
        const accessory = document.querySelector(".accessory");
        const toTop = document.querySelector(".toTop");
        const scrollY = window.scrollY;
        const changeAccessoryFunc = ( scrollY ) => {
            const changeNavMenuHeight = ( oneScreenHeight * ( pointerStyles.length - 1 ) ) + headerHeight;
            if( scrollY >= changeNavMenuHeight){
                accessory.style.transform = "translate3d(0px, -45px, 0px)";
                accessory.style.width = "100px";
                accessory.style.height = "100px";
                accessory.innerText = "Powerd by";
            }else{
                accessory.style.transform = "translate3d(0px, 0px, 0px)";
                accessory.style.width = "55px";
                accessory.style.height = "55px";
                accessory.innerText = "Apps";
            }
        }

        if( scrollY < 45 ){

            if( nav.style.position === "fixed" ){
                nav.style.position = "absolute";
                nav.style.top = "45px";
                accessory.style.transform = "translate3d(0px, -25px, 0px)";
            }

            toTop.style.display = "none";
        }else{

            if(nav.style.position === "absolute"){
                nav.style.position = "fixed";
                nav.style.top = "0px";
                accessory.style.transform = "translate3d(0px, 0px, 0px)";

                changeAccessoryFunc(scrollY);
            }else if(nav.style.position === "fixed"){
                changeAccessoryFunc(scrollY);
            }else if( nav.style.position === "" ){
                nav.style.position = "absolute";
                nav.style.top = "45px";
                accessory.style.transform = "translate3d(0px, -25px, 0px)";
            }
            toTop.style.display = "flex";
        }
    }

	function animateScrollTo( to = 99999, duration = 400,  callback = () => {} ){

        if( duration === 0 ){
            window.scrollTo(0, to);
        }else{

            if( !isAnimateScrolling ){
                let start = window.scrollY;
                let change = to - start;
                let currentTime = 0;
                let increment = 20;

                const animateScroll = ()　=>　{
                    currentTime += increment;
                    let scrollTop = Math.easeInOutQuad(currentTime, start, change, duration);
                    screenTop = Math.floor( scrollTop );
                    window.scrollTo(0, scrollTop);

                    if(currentTime < duration){
                        isAnimateScrolling = true;
                        setTimeout(animateScroll, increment);
                    }

                    if( to === screenTop){
                        isAnimateScrolling = false;
                        callback();
                    }
                };
                animateScroll();
            }
        }
    }

    function setupMath(){
		Math.easeInOutQuad = function (t, b, c, d) {
			t /= d/2;
			if (t < 1) return c/2*t*t + b;
			t--;
			return -c/2 * (t*(t-2) - 1) + b;
		};
	}

    function onMouseOverInput( className ){
        document.querySelector("section." + className ).style.border = "5px solid rgba( 79,174,159,0.8)";
    } 

    function onMouseLeaveInput( className ){
        document.querySelector("section." + className ).style.border = "5px solid rgba( 0,0,0,0.2)";
    } 

    function onFocusInput( className ){
        document.querySelector("section." + className ).style.border = "5px solid rgba( 79,174,159,0.8)";
    } 

    function onBlurInput( className ){
        document.querySelector("section." + className ).style.border = "5px solid rgba( 0,0,0,0.2)";
    } 

    function onClickCopyIframe(){
        document.querySelector("section.three code" ).style.opacity = "1";

        const copyIframe = document.createElement("input");
        copyIframe.value = document.querySelector("code pre")
                                .innerText
                                .replace("// Embed one line.", "")
                                .replace(/\r?\n/g, '')
                                .replace( /    /g, " ");

        copyIframe.id = "copyIframe";
        copyIframe.type = "text";
        copyIframe.style = "opacity: 0";
        document.querySelector("section.three code pre").appendChild(copyIframe);
        copyIframe.focus();
        copyIframe.select();
        document.execCommand("copy"); 

        setTimeout( () => {
            document.querySelector("section.three code" ).style.opacity = "0";
            setTimeout( () => {
    	        copyIframe.parentNode.removeChild(copyIframe);
            }, 1000 );
        }, 3000 );
    } 

    function onResizeWindow(){
        let newOneScreenHeight = 0;
        if( window.innerWidth < responsiveWidth ){
            newOneScreenHeight = smallScreenWidth;
        }else{
            newOneScreenHeight = wideScreenWidth;
        }

        if( oneScreenHeight !== newOneScreenHeight ){
            oneScreenHeight = newOneScreenHeight;
            screen = setScreen();
            movePointer(screen);
            setNavStyles();
            setMenuColor();
        }
    } 

    window.onload =  ( e ) => {

        const search = document.querySelector(".search");
        search.addEventListener('keypress', onKeyPressSearch);

        onResizeWindow();
        setupMath();
        window.pointer = document.querySelector(".pointer");
        window.menuLis = document.querySelectorAll("nav li");
        window.nav = document.querySelector("nav");
        setNavStyles();
        setMenuColor();
    };

    window.onscroll =  ( e ) => {

        setNavStyles();

        if( !isAnimateScrolling ){

            let beforeScreen = screen;
            screen = setScreen();

            if( screen !== beforeScreen){
                movePointer(screen);
                setMenuColor();
            }
        }
    };

    window.onresize = onResizeWindow;

</script>

